# Example .env file for Heron File Classifier

# OpenAI API key for LLM-based classification
OPENAI_API_KEY=your-openai-api-key-here

# Redis configuration (used for caching and Celery broker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# (Optional) Database URL (default is SQLite for local dev)
# DATABASE_URL=sqlite:///classifier.db

# (Optional) DockerHub credentials for CI/CD pipeline (if pushing images)
DOCKERHUB_USERNAME=your-dockerhub-username
DOCKERHUB_TOKEN=your-dockerhub-token

# (Optional) Flask/General App Settings
FLASK_APP=src.app
FLASK_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# (Optional) File upload settings
MAX_FILE_SIZE=10485760  # 10 MB
ALLOWED_MIME_TYPES=application/pdf,text/plain,text/csv